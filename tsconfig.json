{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "typeRoots" : [
      "src/types"
    ],
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "vuetify",
      "@types/node",
      "@types/jest",
      "@types/webpack"
    ],
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "stories"
  ]
}

